{
	"working_folder":"build/",
	"project_name":"OSDevV2",
	"noarch":true,
	"project_binary":"kernel",
	"project_ext":".bin",
	"compiler_c":"clang",
	"compiler_cpp":"clang",
	"compiler_asm":"nasm",
	"linker":"ld.lld",
	"targets":{
		"common":{
			"sources":[
				"src"
			],
			"defines_c_cpp":[
				"-DDEBUG","-DLAI_HOST_IDENTITY_MAP","-D__OSDEV_V2__","-DSERIAL_CRLF","-DLAI_LOG"
			],
			"defines_c":[
				
			],
			"defines_cpp":[
				
			],
			"flags_c_cpp":[
				"-Iinclude","-I\"include/stdc\"","-I\"../lai/include\"",
				"--target=i686-pc-none-elf","-march=i686","-ffreestanding","-fno-builtin","-nostdlib",
				"-nostdinc","-Wall","-Werror=implicit-function-declaration","-Werror=return-type","-mno-red-zone"
			],
			"flags_c":[
				"-std=c11"
			],
			"flags_cpp":[
				"-std=c++20","-nostdinc++","-fno-rtti","-fno-exceptions","-Wshadow","-Wold-style-cast"
			],
			"flags_asm":[
				"-f elf"
			],
			"linker_flags":[
				"-T linker.ld","-Llib"
			],
			"linker_libs":[
				"-lclang_builtins_i386","-llai_i386"
			],
			"link_order_before":[
				"crti"
			],
			"link_extra_before":[
				"\"misc/crtbegin.o\""
			],
			"link_extra_after":[
				"\"misc/crtend.o\""
			],
			"link_order_after":[
				"crtn"
			],
			"nolink":[
				"IOLayerOsDevV2"
			],
			"nocompile":true
		},
		"release":{
			"include":[
				"common"
			],
			"flags":[
				"-O2"
			],
			"linker_flags":[
				"-s"
			]
		},
		"debug":{
			"include":[
				"common"
			],
			"flags":[
				"-g"
			]
		}
	},
	"default_target":"all"
}
